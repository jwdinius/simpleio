{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure simpleio",
            "type": "shell",
            "command": "cmake -S . -B build",
        },
        {
            "label": "Build simpleio",
            "type": "shell",
            "command": "cmake --build build",
            "dependsOn": "Configure simpleio",
            "group": {
                "kind": "build",
                "isDefault": true
            },
                "$gcc"
            ]
        },
        {
            "label": "Run simpleio tests",
            "type": "shell",
            "command": "ctest --test-dir build/tests --output-on-failure",
            "dependsOn": ["Build simpleio"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}